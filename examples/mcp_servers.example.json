{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/you/work"
      ]
    },
    "git": {
      "command": "uvx",
      "args": [
        "mcp-server-git"
      ]
    },
    "ghidra": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "http://localhost:8888/mcp"
      ],
      "stdio_mode": "ndjson"
    }
  }
}
